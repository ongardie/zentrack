   function get_notify_recipients( $ticket_id ) {
      // Get an array of email addresses.
      // Will need two queries here as some versions of mysql
      // doesn't support JOINS and/or UNIONS as needed for this.

      $query  = "SELECT u.email FROM ".$this->table_users." AS u, ";
      $query .= $this->table_notify_list." AS nl WHERE ";
      $query .= "u.user_id = nl.user_id AND nl.ticket_id = '";
      $query .= $ticket_id."' ";

      $rs = $this->db_query($query);  
      if ( count($rs) > 0 ) {
         foreach( $rs as $record ) { $list[] = $record[0]; }
      }

      $query  = "SELECT email FROM ".$this->table_notify_list." WHERE ";
      $query .= "user_id IS NULL AND ticket_id = '".$ticket_id."' ";

      $rs = $this->db_query($query);
      if ( count($rs) ) {
         foreach( $rs as $record ) { $list[] = $record[0]; }
      }

      return $list;
   }

   function get_notify_list( $ticket_id ) {
      $query  = "SELECT * FROM ".$this->table_notify_list." WHERE ";
      $query .= "ticket_id = '".$ticket_id."' ";

      return $this->db_query($query);
   }

   function set_notify_list( $ticket_id, $list ) {
      // Do a $this->drop_notify_list($ticket_id)
      // first and then loop through the $list doing INSERTS.
      $this->drop_notify_list($ticket_id); 

      // Determine if $list[i] is an array or element.
      // If it is an element then $list[i] is a user_id, if an array
      // then $list[i][0] is the name and $list[i][1] is the email.
      foreach ( $list as $item ) {
         if ( count($item) > 1 ) {
           // Array
           $where  = "(ticket_id, name, email) VALUES ('".$ticket_id."', '";
           $where .= $item[0]."', '".$item[1]."') ";
         } else {
           // User ID
           $where  = "(ticket_id, user_id) VALUES ('".$ticket_id."', '";
           $where .= $item."' )";
         }
         $q  = "INSERT INTO ".$this->table_notify_list." ".$where;
         $this->db_result($q);
      }
   }

   function drop_notify_list( $ticket_id ) {
      // Do a DELETE FROM ZENTRACK_NOTIFY_LIST WHERE ticket_id = $ticket_id
      $q  = "DELETE FROM ".$this->table_notify_list." WHERE ticket_id = '";
      $q .= $ticket_id."' ";
      $this->db_result($q);
   }

