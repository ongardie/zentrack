      $this->assign('ALT+SHIFT+3',  'Log',         "KeyEvent.createLoadUrl('{rootUrl}/ticket.php?id={id}&setmode=log')");
      $this->assign('ALT+SHIFT+4',  'Notify',      "KeyEvent.createLoadUrl('{rootUrl}/ticket.php?id={id}&setmode=notify')");
      $this->assign('ALT+SHIFT+5',  'Contacts_',    "KeyEvent.createLoadUrl('{rootUrl}/ticket.php?id={id}&setmode=contacts')");
      $this->assign('ALT+SHIFT+6',  'Related',     "KeyEvent.createLoadUrl('{rootUrl}/ticket.php?id={id}&setmode=related')");
      $this->assign('ALT+SHIFT+7',  'Attachments', "KeyEvent.createLoadUrl('{rootUrl}/ticket.php?id={id}&setmode=attachments')");
      $this->assign('ALT+SHIFT+8',  'System',      "KeyEvent.createLoadUrl('{rootUrl}/ticket.php?id={id}&setmode=system')");
