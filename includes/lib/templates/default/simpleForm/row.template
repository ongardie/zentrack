<!-- 
  This template generates a table row
  containing the label and form element.

  The form element is generated by a sub-template
  based on the field type.
-->
<tr>
  <td class='simpleFormLabel'>{pval[label]}</td>
  <td class='simpleFormCell'>
    {include:"simpleForm/"+pval[type]+".template"}
    {if:showDescription:"<div class='details'>"+pval[description]+"</div>"}
  </td>
</tr>
