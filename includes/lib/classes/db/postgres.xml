
<dbTypeInfo>

  <dbInfo>
    <preferredCase>upper</preferredCase>
  </dbInfo>


  <dataTypes>
    <dataType name="value"      type="VARCHAR"  size="25"   max="25"   fixed="true" />
    <dataType name="string"     type="VARCHAR"  size="200"  max="200"  fixed="false"/>
    <dataType name="maxstring"  type="TEXT"     size=""     max=""     fixed="false"/>
    <dataType name="text"       type="TEXT"     size=""     max=""     fixed="true" />
    <dataType name="byte"       type="SMALLINT" size=""     max="1"    fixed="true" />
    <dataType name="shortint"   type="INT2"     size=""     max="3"    fixed="true" />
    <dataType name="integer"    type="INT8"     size=""     max="9"    fixed="true" />
    <dataType name="decimal"    type="DECIMAL"  size="6,2"  max="16,4" fixed="false"/>
    <dataType name="long"       type="BIGINT"   size=""     max="18"   fixed="true" />
    <dataType name="primarykey" type="INT"      size=""     max="9"    fixed="true" />
    <dataType name="email"      type="VARCHAR"  size="255"  max="255"  fixed="true" />
    <dataType name="date"       type="BIGINT"   size=""     max="18"   fixed="true" />
  </dataTypes>


  <sqlInfo>
    <endline>;</endline>
    <escapeCharacter>\</escapeCharacter>
    <createSyntax>CREATE %table% {%columns%}</createSyntax>
    <dropTableSyntax>DROP TABLE %table%</dropTableSyntax>
    <primaryKey location="inline"> NOT NULL PRIMARY KEY</primaryKey>
    <indexSyntax location="external" uniquelabel="UNIQUE">
      CREATE INDEX %unique% %name% ON %table%(%columns%)
    </indexSyntax>
    <dropIndexSyntax></dropIndexSyntax>
    <addColumnSyntax>ALTER TABLE %table% ADD COLUMN %name% (%properties%)</addColumnSyntax>
    <dropColumnSyntax>ALTER TABLE %table% DROP COLUMN %name%</dropColumnSyntax>
    <deleteSyntax><format>DELETE FROM %table% %where%</deleteSyntax>
    <insertSyntax>INSERT INTO %table% COLUMNS(%columns%) VALUES(%values%)</insertSyntax>
    <updateSyntax>UPDATE %table% SET %set% %where%</updateSyntax>
  </sqlInfo>

</dbTypeInfo>




