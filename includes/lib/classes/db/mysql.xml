
<dbTypeInfo>

  <dbInfo>
    <preferredCase>upper</preferredCase>
  </dbInfo>


  <dataTypes>
    <dataType name="value"      type="VARCHAR" size="25"  max="25"   fixed="true" />
    <dataType name="string"     type="VARCHAR" size="200" max="200"  fixed="false"/>
    <dataType name="maxstring"  type="TEXT"    size=""    max=""     fixed="true" />
    <dataType name="text"       type="TEXT"    size=""    max=""     fixed="true" />
    <dataType name="byte"       type="INT"     size="1"   max="1"    fixed="true" />
    <dataType name="shortint"   type="INT"     size="3"   max="3"    fixed="true" />
    <dataType name="integer"    type="INT"     size="9"   max="9"    fixed="true" />
    <dataType name="decimal"    type="DECIMAL" size="6,2" max="16,4" fixed="false"/>
    <dataType name="long"       type="BIGINT"  size=""    max="18"   fixed="true" />
    <dataType name="primarykey" type="INT"     size="12"  max="12"   fixed="true" />
    <dataType name="email"      type="VARCHAR" size="255" max="255"  fixed="true" />
    <dataType name="date"       type="INT"     size="12"  max="12"   fixed="true" />
  </dataTypes>


  <sqlInfo>
    <endline>;</endline>
    <escapechar>\</escapechar>
    <create>CREATE %table% {%columns%}</create>
    <droptable>DROP TABLE %table%</droptable>
    <primarykey location="inline">NOT NULL PRIMARY KEY</primarykey>
    <index location="external" uniquelabel="UNIQUE">
      CREATE %unique% INDEX %name% ON %table%(%columns%)
    </index>
    <dropindex></dropindex>
    <tablecolumn uniquelabel="" notnull="NOT NULL">%name% %datatype% %attr% </tablecolumn>
    <addcolumn>ALTER TABLE %table% ADD COLUMN %def% %after%</addcolumn>
    <dropcolumn>ALTER TABLE %table% DROP COLUMN %name%</dropcolumn>
    <delete><format>DELETE FROM %table% %where%</delete>
    <insert>INSERT INTO %table% COLUMNS(%columns%) VALUES(%values%)</insert>
    <update>UPDATE %table% SET %set% %where%</update>
  </sqlInfo>

</dbTypeInfo>










