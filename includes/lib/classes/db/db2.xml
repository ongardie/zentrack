
<dbTypeInfo>

  <dbInfo>
    <preferredCase>upper</preferredCase>
  </dbInfo>


  <dataTypes>
    <dataType name="value"      type="VARCHAR"  size="25"    max="25"    fixed="true" />
    <dataType name="string"     type="VARCHAR"  size="200"   max="200"   fixed="false"/>
    <dataType name="maxstring"  type="VARCHAR"  size="10000" max="10000" fixed="true"/>
    <dataType name="text"       type="CLOB"     size="2M"    max=""      fixed="true" />
    <dataType name="byte"       type="SMALLINT" size=""      max="1"     fixed="true" />
    <dataType name="shortint"   type="SMALLINT" size=""      max="3"     fixed="true" />
    <dataType name="integer"    type="INTEGER"  size=""      max="9"     fixed="true" />
    <dataType name="decimal"    type="DECIMAL"  size="4,2"   max="12,4"  fixed="false"/>
    <dataType name="long"       type="BIGINT"   size=""      max="18"    fixed="true" />
    <dataType name="primarykey" type="INTEGER"  size=""      max="9"     fixed="true" />
    <dataType name="email"      type="VARCHAR"  size="255"   max="255"   fixed="true" />
    <dataType name="date"       type="BIGINT"   size=""      max="18"    fixed="true" />
  </dataTypes>


  <sqlInfo>
    <endline specialchar="\n"></endline>
    <escapechar>\</escapechar>
    <create>CREATE %table% {%columns%}</create>
    <droptable>DROP TABLE %table%</droptable>
    <primarykey location="inline">CONSTRAINT %name% PRIMARY KEY</primarykey>
    <index location="external" uniquelabel="UNIQUE">
      CREATE %unique% INDEX %name% ON %table%(%columns%)
    </index>
    <dropindex></dropindex>
    <tablecolumn uniquelabel="CONSTRAINT UNIQUE" notnull="NOT NULL">%name% %datatype% %attr%</tablecolumn>
    <addcolumn>ALTER TABLE %table% ADD COLUMN %def%</addcolumn>
    <dropcolumn>ALTER TABLE %table% DROP COLUMN %name%</dropcolumn>
    <delete><format>DELETE FROM %table% %where%</delete>
    <insert>INSERT INTO %table% COLUMNS(%columns%) VALUES(%values%)</insert>
    <update>UPDATE %table% SET %set% %where%</update>
  </sqlInfo>

</dbTypeInfo>