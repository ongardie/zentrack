
<dbTypeInfo>

  <dbInfo>
    <preferredCase>upper</preferredCase>
  </dbInfo>

  <dataTypes>
    <dataType name="value"      type="VARCHAR2" size="25"   max="25"   fixed="true" />
    <dataType name="string"     type="VARCHAR2" size="200"  max="200"  fixed="false"/>
    <dataType name="maxstring"  type="VARCHAR2" size="4000" max="4000" fixed="true"/>
    <dataType name="text"       type="VARCHAR2" size="4000" max="4000" fixed="true"/>
    <dataType name="byte"       type="NUMBER"   size="1,0"  max="1,0"  fixed="true" />
    <dataType name="shortint"   type="NUMBER"   size="3,0"  max="3,0"  fixed="true" />
    <dataType name="integer"    type="NUMBER"   size="9,0"  max="9,0"  fixed="true" />
    <dataType name="decimal"    type="NUMBER"   size="6,2"  max="16,4" fixed="false"/>
    <dataType name="long"       type="NUMBER"   size="18,0" max="18,0" fixed="true" />
    <dataType name="primarykey" type="NUMBER"   size="9,0"  max="9,0"  fixed="true" />
    <dataType name="email"      type="VARCHAR2" size="255"  max="255"  fixed="true" />
    <dataType name="date"       type="NUMBER"   size="12,0" max="12,0" fixed="true" />
  </dataTypes>

  <sqlInfo>
    <now>CAST(CURRENT_TIMESTAMP as NUMBER(12,0))</now>
    <endline>;</endline>
    <escapechar>'</escapechar>
    <create>CREATE TABLE %table% (%columns%)</create>
    <droptable>DROP TABLE %table% CASCADE CONSTRAINT</droptable>
    <primarykey location="internal">CONSTRAINT %keyname% PRIMARY KEY (%column%)</primarykey>
    <index uniquelabel="UNIQUE">CREATE %unique% INDEX %name% ON %table%(%columns%)</index>
    <dropindex></dropindex>
    <tablecolumn uniquelabel="CONSTRAINT %keyname% UNIQUE" notnull="CONSTRAINT %keyname% NOT NULL" 
                 default="DEFAULT %default%">%name% %datatype% %attr%</tablecolumn>
    <addcolumn>ALTER TABLE %table% ADD COLUMN %def%</addcolumn>
    <dropcolumn>ALTER TABLE %table% DROP COLUMN %name%</dropcolumn>
    <delete>DELETE FROM %table% %where%</delete>
    <insert>INSERT INTO %table% COLUMNS(%columns%) VALUES(%values%)</insert>
    <update>UPDATE %table% SET %set% %where%</update>
  </sqlInfo>

</dbTypeInfo>