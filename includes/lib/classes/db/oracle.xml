
<dbTypeInfo>

  <dbInfo>
    <preferredCase>upper</preferredCase>
  </dbInfo>

  <dataTypes>
    <dataType name="value"      type="VARCHAR2" size="25"   max="25"   fixed="true" />
    <dataType name="string"     type="VARCHAR2" size=""     max="200"  fixed="false"/>
    <dataType name="maxstring"  type="VARCHAR2" size="4000" max="4000" fixed="true"/>
    <dataType name="text"       type="VARCHAR2" size="4000" max="4000" fixed="true"/>
    <dataType name="byte"       type="NUMBER"   size="1,0"  max="1,0"  fixed="true" />
    <dataType name="shortint"   type="NUMBER"   size="3,0"  max="3,0"  fixed="true" />
    <dataType name="integer"    type="NUMBER"   size="9,0"  max="9,0"  fixed="true" />
    <dataType name="decimal"    type="NUMBER"   size="6,2"  max="16,4" fixed="false"/>
    <dataType name="long"       type="NUMBER"   size="18,0" max="18,0" fixed="true" />
    <dataType name="primarykey" type="NUMBER"   size="9,0"  max="9,0"  fixed="true" />
    <dataType name="email"      type="VARCHAR2" size="255"  max="255"  fixed="true" />
    <dataType name="date"       type="NUMBER"   size="12,0" max="12,0" fixed="true" />
  </dataTypes>


  <sqlInfo>
    <endline>;</endline>
    <escapeCharacter>'</escapeCharacter>
    <createSyntax>CREATE %table% {%columns%}</createSyntax>
    <dropTableSyntax>DROP TABLE %table%</dropTableSyntax>
    <primaryKey location="internal">CONSTRAINT %name% PRIMARY KEY (%column%)</primaryKey>
    <indexSyntax location="external" uniquelabel="">
      CREATE %unique% INDEX %name% ON %table%(%columns%)
    </indexSyntax>
    <dropIndexSyntax></dropIndexSyntax>
    <addColumnSyntax>ALTER TABLE %table% ADD COLUMN %name% %properties%</addColumnSyntax>
    <dropColumnSyntax>ALTER TABLE %table% DROP COLUMN %name%</dropColumnSyntax>
    <deleteSyntax><format>DELETE FROM %table% %where%</deleteSyntax>
    <insertSyntax>INSERT INTO %table% COLUMNS(%columns%) VALUES(%values%)</insertSyntax>
    <updateSyntax>UPDATE %table% SET %set% %where%</updateSyntax>
  </sqlInfo>

</dbTypeInfo>