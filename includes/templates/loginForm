<script type='text/javascript'>
  var f = function() {
    var f = window.document.loginForm;
    if( f.username.value == "" ) {
      f.username.focus();
    }
    else if( f.passphrase.value == "" ) {
      f.passphrase.focus();
    }
    else {
      f.TODO.focus();
    }  
  }
  addToOnload( f );
</script>
